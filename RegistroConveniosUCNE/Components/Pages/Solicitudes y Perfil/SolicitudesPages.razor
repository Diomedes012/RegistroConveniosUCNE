@page "/solicitudes"

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="solicitudes-container">
    <!-- Barra superior amarilla -->
    <div class="header-bar d-flex align-items-center px-4">
        <img src="/images/logoUcnePeq.png" class="logo me-3" alt="Logo" />
        <h1 class="titulo mb-0">Solicitudes</h1>
    </div>

    <!-- Contenedor principal -->
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column align-items-center py-4">
            <div class="menu-icon mb-4">
                <i class="bi bi-list text-white fs-3"></i>
            </div>
            <div class="nav-item mb-4"><i class="bi bi-house-door text-white fs-4"></i></div>
            <div class="nav-item mb-4"><i class="bi bi-file-earmark-text text-white fs-4"></i></div>
            <div class="nav-item mb-4"><i class="bi bi-gear text-white fs-4"></i></div>
        </div>

        <!-- Contenido principal -->
        <div class="contenido flex-grow-1 p-4">
            <!-- Buscador -->
            <div class="search-bar d-flex align-items-center justify-content-between p-3 bg-white rounded shadow-sm mb-4">
                <input type="text" class="form-control border-0 shadow-none" placeholder="Buscar solicitud por ID, documento o estado..." />
                <i class="bi bi-search fs-4 text-secondary"></i>
            </div>

            <!-- Encabezado de tabla -->
            <div class="tabla-header d-flex justify-content-between align-items-center px-4 py-3 text-white rounded-top">
                <span>ID</span>
                <span>Documento</span>
                <span>Fecha</span>
                <span>Estado</span>
            </div>

            <!-- Tabla de solicitudes -->
            <table class="table table-hover align-middle text-center">
                <tbody>
                    @foreach (var solicitud in solicitudes)
                    {
                        <tr>
                            <td>@solicitud.Id</td>
                            <td>@solicitud.Documento</td>
                            <td>@solicitud.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@solicitud.Estado</td>
                        </tr>
                    }

                    @if (solicitudes.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-muted py-4">No hay solicitudes registradas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    public class Solicitud
    {
        public int Id { get; set; }
        public string Documento { get; set; } = "";
        public DateTime Fecha { get; set; } = DateTime.Now;
        public string Estado { get; set; } = "Activo";
    }

    private List<Solicitud> solicitudes = new List<Solicitud>
    {
        // Puedes dejar vacío o agregar ejemplos:
        // new Solicitud { Id = 1, Documento = "123456", Fecha = DateTime.Now, Estado = "Activo" },
    };
}
