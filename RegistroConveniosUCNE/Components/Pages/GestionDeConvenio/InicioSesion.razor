@page "/"
@layout Layout.EmptyLayout
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

@using System.ComponentModel.DataAnnotations

<div class="login-page-container">

    <img src="lib/images/fondoInicioSesion.png" alt="Fondo de inicio de sesión" class="background-image" />

    <div class="login-box">
        <img class="logo-1" src="lib/images/logoUcnePeq.png" alt="Logo UCNE" />

        <h2 class="login-title">INICIO DE SESIÓN ADMINISTRADOR</h2>

        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="usuario">
                    <i class="bi bi-person-fill"></i> Usuario
                </label>
                <InputText id="usuario" class="form-control" placeholder="Ingrese su usuario" @bind-Value="loginModel.Username" />
                <ValidationMessage For="() => loginModel.Username" />
            </div>

            <div class="form-group">
                <label for="password">
                    <i class="bi bi-key-fill"></i> Contraseña
                </label>
                <InputText id="password" type="password" class="form-control" placeholder="Ingrese su contraseña" @bind-Value="loginModel.Password" />
                <ValidationMessage For="() => loginModel.Password" />
            </div>

            <button type="submit" class="btn-login">INICIAR SESIÓN</button>

        </EditForm>

        <div class="links-container">
            <a href="/recuperar" class="login-link">
                <i class="bi bi-key"></i> Olvidé mi contraseña
            </a>
            <a href="/crear-cuenta" class="login-link">
                <i class="bi bi-person-plus-fill"></i> Crear cuenta
            </a>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new LoginModel();

    // Modelo para vincular los datos del formulario
    public class LoginModel
    {
        [Required(ErrorMessage = "El usuario es requerido.")]
        public string? Username { get; set; }

        [Required(ErrorMessage = "La contraseña es requerida.")]
        public string? Password { get; set; }
    }

    private void HandleLogin()
    {
        // Aquí iría tu lógica de validación de usuario y contraseña

        // Navegamos a la página principal interna
        NavigationManager.NavigateTo("/pantalla-principal");
    }
}
